<?xml version='1.0' encoding='iso-8859-1' standalone='yes'?>
<Template>
   <Name>all4sps</Name>
   <Author>Photografix GmbH</Author>
   <URL>http://www.photografix.ch</URL>
   <Version>3.17</Version>
   <ShopVersion>317</ShopVersion>
   <Preview>themes/base/images/preview.png</Preview> 
   <Settings>
      <Section Name="Allgemein" Key="general">
         <Setting Description="Benutzerdefinierte Template-Dateien verwenden?" Key="use_customtpl" Type="select" Value="Y">
            <Option Value="N">Nein</Option>
            <Option Value="Y">Ja</Option>
         </Setting>
         <Setting Description="Moegliche Header-Varianten" Key="use_header" Type="select" Value="standard">
            <Option Value="light">Light</Option>
            <Option Value="standard">Standard</Option>
            <Option Value="searchtop">Suche oben</Option>
         </Setting>
         <Setting Description="Hotline-Nummer" Key="use_hotline" Type="text" Value="0800 123 3456" />
         <Setting Description="Viewport Meta-Element Angabe" Key="viewport_device_width" Type="select" Value="N">
            <Option Value="N">nicht verwenden (Standard)</Option>
            <Option Value="Y">1:1 Skalierung (Responsive Theme)</Option>
         </Setting>
         <Setting Description="Webseite ausrichten" Key="page_align" Type="select" Value="C">
            <Option Value="C">Zentriert</Option>
            <Option Value="L">Links</Option>
         </Setting>
         <Setting Description="Automatische Quellcode-Reparatur (Tidy)" Key="use_tidy" Type="select" Value="N">
            <Option Value="Y">Ja</Option>
            <Option Value="N">Nein</Option>
         </Setting>
         <Setting Description="SocialNetwork Button von Addthis (addthis.com)" Key="addthis_url" Type="text" Value="" />
         <Setting Description="Komprimierung von Javascript und Stylesheets" Key="use_minify" Type="select" Value="N">
            <Option Value="Y">Ja</Option>
            <Option Value="N">Nein</Option>
         </Setting>
         <Setting Description="Erweiterte Fusszeile anzeigen?" Key="ext_footer" Type="select" Value="Y">
            <Option Value="N">Nein</Option>
            <Option Value="Y">Ja</Option>
         </Setting>
         <Setting Description="Newsletterformular in Fusszeile anzeigen?" Key="ext_newsletter_footer" Type="select" Value="Y">
            <Option Value="N">Nein</Option>
            <Option Value="Y">Ja</Option>
         </Setting>
      </Section>
      <Section Name="Social Media" Key="social">
         <Setting Description="Google" Key="use_google" Type="text" Value="#" />
         <Setting Description="Twitter" Key="use_twitter" Type="text" Value="#" />
         <Setting Description="Facebook" Key="use_facebook" Type="text" Value="#" />
      </Section>
      <Section Name="Artikeluebersicht" Key="articleoverview">
         <Setting Description="'Artikel wurde in den Warenkorb gelegt' Popup anzeigen" Key="article_pushed_to_basket" Type="select" Value="Y">
            <Option Value="Y">Ja</Option>
            <Option Value="N">Nein</Option>
         </Setting>
         <Setting Description="Animation" Key="article_pushed_to_basket_animation" Type="select" Value="Y">
            <Option Value="Y">Ja</Option>
            <Option Value="N">Nein</Option>
         </Setting>
         <Setting Description="Animierte Tag-Wolke anzeigen?" Key="show_flash_cloud" Type="select" Value="N">
            <Option Value="Y">Ja</Option>
            <Option Value="N">Nein</Option>
         </Setting>
         
         <Setting Description="Bildvorschau in Listenansichten aktivieren?" Key="article_image_preview" Type="select" Value="Y">
            <Option Value="Y">Ja</Option>
            <Option Value="N">Nein</Option>
         </Setting>
         
         <Setting Description="Artikelkurzbeschreibung anzeigen?" Key="article_show_short_desc" Type="select" Value="Y">
             <Option Value="Y">Ja</Option>
             <Option Value="N">Nein</Option>
         </Setting>
         <Setting Description="Artikelnummer anzeigen?" Key="article_show_no" Type="select" Value="N">
            <Option Value="N">Nein</Option>
            <Option Value="Y">Ja</Option>
         </Setting>
         <Setting Description="Bei MouseOver das zweite Varianten-Bild anzeigen" Key="article_show_image_attrib" Type="select" Value="Y">
             <Option Value="Y">Ja</Option>
             <Option Value="N">Nein</Option>
         </Setting>
         <Setting Description="Artikelansicht (Start- und Detailseite) als Slider" Key="article_show_slider" Type="select" Value="N">
             <Option Value="Y">Ja</Option>
             <Option Value="N">Nein</Option>
         </Setting>
      </Section>
      <Section Name="Artikeldetails" Key="articledetails">
         <Setting Description="'Artikel wurde in den Warenkorb gelegt' Popup anzeigen" Key="article_pushed_to_basket" Type="select" Value="Y">
            <Option Value="Y">Ja</Option>
            <Option Value="N">Nein</Option>
         </Setting>
         <Setting Description="Anzahl sichtbarer Artikel bei Artikelempfehlungen" Key="article_jcarousel_visible" Type="text" Value="2" />
         <Setting Description="Matrix labels" Key="show_labels" Type="select" Value="N">
            <Option Value="Y">Ja</Option>
            <Option Value="N">Nein</Option>
         </Setting>
         <Setting Description="Bilder-Zoom Methode" Key="image_zoom_method" Type="select" Value="ZL">
            <Option Value="Z">Lupe</Option>
            <Option Value="L">Lightbox</Option>
            <Option Value="ZL">Lupe + Lightbox</Option>
         </Setting>
      </Section>
      <Section Name="Boxen" Key="boxes">
         <Setting Description="Animierte Tag-Wolke anzeigen" Key="box_use_flash_cloud" Type="select" Value="N">
            <Option Value="Y">Ja</Option>
            <Option Value="N">Nein</Option>
         </Setting>
         <Setting Description="Anmelde-Fenster Drop-Down anzeigen" Key="box_ext_login" Type="select" Value="N">
            <Option Value="Y">Ja</Option>
            <Option Value="N">Nein</Option>
         </Setting>
      </Section>
      <Section Name="Kategorien" Key="categories">
         <Setting Description="Topnavigation: Alle Kategorien aufklappen" Key="topnavi_categories_full_category_tree" Type="select" Value="Y">
            <Option Value="Y">Ja</Option>
            <Option Value="N">Nein</Option>
         </Setting>
         <Setting Description="Seitliche Kategoriebox: Darstellung" Key="sidebox_categories_use_subcat_navi" Type="select" Value="Y">
             <Option Value="Y">Unterkategorien der jew. Kategorie, aufgeklappt</Option>
             <Option Value="U">Nur Unterkategorien der jew. Kategorie</Option>
             <Option Value="N">Alle Kategorien</Option>
         </Setting>
      </Section>
      <Section Name="Theme" Key="theme">
         <Setting Description="Standard-Theme" Key="theme_default" Type="select" Value="standard">
            <Option Value="standard">standard</Option>
            <Option Value="boxed">boxed</Option>
            <Option Value="custom">Benutzerdefiniert</Option>
         </Setting>
      </Section>
   </Settings>
   <Minify>
      <CSS Name="print.css">
         <File Path="themes/base/base.css" />
         <File Path="themes/base/page.css" />
         <File Path="themes/base/specific.css" />
         <File Path="themes/base/print.css" />
      </CSS>
      <CSS Name="standard.css">
         <File Path="themes/base/base.css" />
         <File Path="themes/base/page.css" />
         <File Path="themes/base/boxes.css" />
         <File Path="themes/base/-specific.css" />
      </CSS>
      <CSS Name="boxed.css">
         <File Path="themes/base/base.css" />
         <File Path="themes/base/page.css" />
         <File Path="themes/base/boxes.css" />
         <File Path="themes/base/-specific.css" />
      </CSS>
      <CSS Name="custom.css">
         <File Path="themes/base/base.css" />
         <File Path="themes/base/page.css" />
         <File Path="themes/base/boxes.css" />
         <File Path="themes/base/-specific.css" />
      </CSS>
      <JS Name="jtl3.js">
         <File Path="js/jquery-1.4.2.js" />
         <File Path="js/jquery.slider.js" />
         <File Path="js/jquery-ui-1.8.9.custom.min.js" />
         <File Path="js/jquery.timers-1.2.js" />
         <File Path="js/jquery.cookie.js" />
         <File Path="js/jquery.pstrength.1.1.js" />
         <File Path="js/jquery.simplemodal-1.3.5.js" />
         <File Path="js/jquery.semantictabs.js" />
         <File Path="js/jquery.autocomplete.js" />
         <File Path="js/jquery.jcarousel.js" />
         <File Path="js/jquery.cal.js" />
         <File Path="js/cloud-zoom.1.0.2.js" />
         <File Path="js/jquery.mousewheel-3.0.4.pack.js" />
         <File Path="js/jquery.fancybox-1.3.3.js" />
         <File Path="js/jquery.tooltip.js" />
         <File Path="js/jquery.tipTip.js" />
         <File Path="js/jquery.dependClass.js" />
         <File Path="js/hoverIntent.js" />
         <File Path="js/jquery.dropdown.js" />
         <File Path="js/jquery.waitforimages.js" />
         <File Path="js/global.js" />
         <File Path="js/jtl.basket.js" />
         <File Path="js/jquery.nivo.slider.pack.js" />
      </JS>
   </Minify>
   <Boxes>
      <Container Position="left" Available="1"></Container>
      <Container Position="right" Available="1"></Container>
      <Container Position="top" Available="1"></Container>
      <Container Position="bottom" Available="1"></Container>
   </Boxes>
</Template>